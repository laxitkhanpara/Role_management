<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">

                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addTrainingType">Add TrainingType</button>
                            </div>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>TrainingType</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>TrainingType</th>
                                                            <th>Status</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% TrainingType.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.TrainingType %>
                                                                    </td>
                                                                    <td>
                                                                        <%if(item.Status=="Active"){%>
                                                                            <span class="badge badge-success">Active</span>
                                                                        <%}else{%>
                                                                            <span class="badge badge-danger">Inactive</span>
                                                                        <%}%>
                                                                    </td>
                                                                    <td>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-name="<%=item.TrainingType%>"
                                                                                    data-Status="<%=item.Status%>"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editTrainingType"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/TrainingTypes/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <!-- model of add TrainingType -->
    <div class="modal fade model-of-addTrainingType" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">TrainingType</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newTrainingType" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Training Type Name</label>
                            <input name="TrainingType" class="form-control"  type="text"
                                aria-describedby="emailHelp" placeholder="Enter TrainingType">
                        </div>
                        <div class="mb-3">
                            <label class="form-label f-w-500">Status</label>
                            <select name="Status" class="form-control btn-square">
                                <option selected disabled>--Please Select--</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- model of edit TrainingType -->
    <div class="modal fade model-of-editTrainingType" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">TrainingType</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formaction" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Training Type Name</label>
                            <input name="TrainingType" class="form-control" id="TrainingType" type="text"
                                aria-describedby="emailHelp" placeholder="Enter TrainingType">
                        </div>
                        <div class="mb-3">
                            <label class="form-label f-w-500">Status</label>
                            <select name="Status" class="form-control btn-square" id="Status"> 
                                <option selected disabled>--Please Select--</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Done</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>