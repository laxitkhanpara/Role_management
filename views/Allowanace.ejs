<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">

                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addAllowanace">Add Allowanace</button>
                            </div>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>Allowanace</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>Allowanace Name</th>
                                                            <th>Allowanace Type</th>
                                                            <th>Percentage of Basic</th>
                                                            <th>Limit Per Month</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% Allowanace.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.AllowanaceName %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.AllowanaceType %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.profbasic %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.limite %>
                                                                    </td>
                                                                    <td>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-name="<%=item.AllowanaceName%>"
                                                                                    data-AllowanaceType="<%=item.AllowanaceType%>"
                                                                                    data-profbasic="<%=item.profbasic%>"
                                                                                    data-limite="<%=item.limite%>"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editAllowanace"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/Allowanaces/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <!-- model of add Allowanace -->
    <div class="modal fade model-of-addAllowanace" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">Allowanace</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newAllowanace" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Allowanace Name</label>
                            <input required name="AllowanaceName" class="form-control" id="exampleInputEmail1" type="text"
                                aria-describedby="emailHelp" placeholder="Enter Allowanace">
                        </div>
                        
                            <div class="mb-3">
                                <label class="form-label f-w-500">Allowanace Type</label>
                                <select name="AllowanaceType" class="form-control btn-square">
                                    <option selected disabled>--Please Select--</option>
                                    <option value="Percentage">Percentage</option>
                                    <option value="Fixed">Fixed</option>
                                </select>
                            </div>
                  
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Percentage of Basic</label>
                            <input required name="profbasic" class="form-control" id="exampleInputEmail1" type="text"
                                aria-describedby="emailHelp" placeholder="if Type is Percentage">
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Limit Per Month</label>
                            <input required name="limite" class="form-control" id="exampleInputEmail1" type="text"
                                aria-describedby="emailHelp" placeholder="/-">
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- model of edit Allowanace -->
    <div class="modal fade model-of-editAllowanace" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">Allowanace</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newAllowanace" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Allowanace Name</label>
                            <input required name="AllowanaceName" class="form-control" id="AllowanaceName" type="text"
                                aria-describedby="emailHelp" placeholder="Enter Allowanace">
                        </div>
                      
                            <div class="mb-3">
                                <label class="form-label f-w-500">Allowanace Type</label>
                                <select name="AllowanaceType" class="form-control btn-square">
                                    <option selected disabled>--Please Select--</option>
                                    <option value="Percentage">Percentage</option>
                                    <option value="Fixed">Fixed</option>
                                </select>
                            </div>
                        
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Percentage of Basic</label>
                            <input required name="profbasic" class="form-control" id="profbasic" type="text"
                                aria-describedby="emailHelp" placeholder="if Type is Percentage">
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Limit Per Month</label>
                            <input required name="limite" class="form-control" id="limite" type="text"
                                aria-describedby="emailHelp" placeholder="/-">
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>