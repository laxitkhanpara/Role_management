<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">

                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addApplyLeave">Add ApplyLeave</button>
                            </div>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>Apply Leave</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>Reason</th>
                                                            <th>From Date</th>
                                                            <th>To Date</th>
                                                            <th>Status</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% ApplyLeave.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.Reason %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.FromDate %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.ToDate %>
                                                                    </td>
                                                                    <td>
                                                                        <%if(item.Status=="Active"){%>
                                                                            <span class="badge badge-success">Active</span>
                                                                        <%}else if(item.Status=="Inactive"){%>
                                                                            <span class="badge badge-danger">Inactive</span>
                                                                        <%}else{%>
                                                                        <span class="badge badge-secondary">Pending</span>
                                                                        <%}%>
                                                                    </td>
                                                                    <td>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-name="<%=item.ApplyLeave%>"
                                                                                    data-status="<%=item.Status%>"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editApplyLeave"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/ApplyLeaves/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <!-- model of add ApplyLeave -->
    <div class="modal fade model-of-addApplyLeave" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">ApplyLeave</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newApplyLeave" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="form-label f-w-500">Reason</label>
                            <input required name="Reason" class="form-control" type="text"
                                placeholder="">
                        </div>
                        
                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">From Date</label>
                                <div class="input-group">
                                    <input required name="FromDate"
                                        class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">To Date</label>
                                <div class="input-group">
                                    <input required name="ToDate"
                                        class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- model of edit ApplyLeave -->
    <div class="modal fade model-of-editApplyLeave" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">ApplyLeave</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formaction" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="form-label f-w-500">Reason</label>
                            <input required name="Reason" class="form-control" type="text"
                                placeholder="John">
                        </div>
                        
                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">From Date</label>
                                <div class="input-group">
                                    <input required name="FromDate"
                                        class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">To Date</label>
                                <div class="input-group">
                                    <input required name="ToDate"
                                        class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Done</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>