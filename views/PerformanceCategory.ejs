<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">

                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addPerformanceCategory">Add PerformanceCategory</button>
                            </div>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>PerformanceCategory</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>Performance Category</th>
                                                            <th>Performance Criteria Name</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% PerformanceCategory.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.PerformanceCategory %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.PerformanceCriteriaName %>
                                                                    </td>
                                                                    <td>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-name="<%=item.PerformanceCategory%>"
                                                                                    data-prcriter="<%=item.PerformanceCriteriaName%>"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editPerformanceCategory"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/PerformanceCategorys/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <!-- model of add PerformanceCategory -->
    <div class="modal fade model-of-addPerformanceCategory" tabindex="-1" role="dialog"
        aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">PerformanceCategory</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newPerformanceCategory" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Performance Category Name</label>
                            <input required name="PerformanceCategory" type="text" list="cars" class="form-control"/>
                            <datalist id="cars">
                                <% PerformanceCategory.forEach( (item)=>{ %>
                                    <option value="<%=item.PerformanceCategory %>">
                                        <%=item.PerformanceCategory %>
                                    </option>
                                    <% }) %>
                            </datalist>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Performance Criteria Name</label>
                            <input required name="PerformanceCriteriaName" class="form-control" id="exampleInputEmail1" type="text"
                                aria-describedby="emailHelp" placeholder="Enter PerformanceCategory">
                        </div>
                        
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- model of edit PerformanceCategory -->
    <div class="modal fade model-of-editPerformanceCategory" tabindex="-1" role="dialog"
        aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">PerformanceCategory</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newPerformanceCategory" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Performance Category Name</label>
                            <input required name="PerformanceCategory" type="text" list="cars" class="form-control"/>
                            <datalist id="cars">
                                <% PerformanceCategory.forEach( (item)=>{ %>
                                    <option value="<%=item.PerformanceCategory %>">
                                        <%=item.PerformanceCategory %>
                                    </option>
                                    <% }) %>
                            </datalist>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Performance Criteria Name</label>
                            <input required name="PerformanceCriteriaName" class="form-control" id="lol" type="text"
                                aria-describedby="emailHelp" placeholder="Enter PerformanceCategory">
                        </div>
                        
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>