<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">
                            <%if(PermRole[0].Role == 1){%>
                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addAward">Add Award</button>
                            </div>
                            <%}%>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>Award</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>Username</th>
                                                            <th>Award Name</th>
                                                            <th>Gift Item</th>
                                                            <th>Month</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% Award.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.username %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.Award %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.GiftItem %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.Month %>
                                                                    </td>
                                                                    <td>
                                                                        <%if(PermRole[0].Role == 1){%>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-username="<%=item.username%>"
                                                                                    data-Award="<%=item.Award%>"
                                                                                    data-GiftItem="<%=item.GiftItem%>"
                                                                                    data-Month="<%=item.Month%>"
                                                                                    
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editAward"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/Awards/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                        <%}else{%>
                                                                            <h6>disable</h6>
                                                                        <%}%>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <!-- model of add Award -->
    <div class="modal fade model-of-addAward" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">Award</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newAward" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="form-label f-w-500">Employee Name</label>
                            <select name="username" class="form-control btn-square">
                                <option selected disabled>--Please Select--</option>
                                <% User.forEach( (item)=>{ %>
                                    <option value="<%=item.username %>">
                                        <%=item.username %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Award Name</label>
                            <input name="Award" class="form-control" id="exampleInputEmail1" type="text"
                                aria-describedby="emailHelp" placeholder="Enter Award">
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">Gift Item</label>
                            <input name="GiftItem" class="form-control" id="GiftItem" type="text"
                                aria-describedby="emailHelp" placeholder="Enter Award">
                        </div>
                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">Month</label>
                                <div class="input-group">
                                    <input name="Month" id="Month" class="datepicker-here form-control digits" type="text" data-language="en"
                                    data-min-view="months" data-view="months" data-date-format="MM yyyy">
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- model of edit Award -->
    <div class="modal fade model-of-editAward" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">Award</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" class="theme-form">
                    <div class="mb-3">
                        <label class="form-label f-w-500">Employee Name</label>
                        <select name="username" class="form-control btn-square">
                            <option selected disabled>--Please Select--</option>
                            <% User.forEach( (item)=>{ %>
                                <option value="<%=item.username %>">
                                    <%=item.username %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="col-form-label pt-0" for="exampleInputEmail1">Award Name</label>
                        <input name="Award" class="form-control" id="exampleInputEmail1" type="text"
                            aria-describedby="emailHelp" placeholder="Enter Award">
                    </div>
                    <div class="mb-3">
                        <label class="col-form-label pt-0" for="exampleInputEmail1">Gift Item</label>
                        <input name="GiftItem" class="form-control" id="GiftItem" type="text"
                            aria-describedby="emailHelp" placeholder="Enter Award">
                    </div>
                    <div class="mb-3">
                        <div class="date-picker">
                            <label class="form-label f-w-500">Month</label>
                            <div class="input-group">
                                <input name="Month" id="Month" class="datepicker-here form-control digits" type="text" data-language="en"
                                data-min-view="months" data-view="months" data-date-format="MM yyyy">
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                        title="">Add</button>
                </form>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>