<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">

                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addworkShift">Add workShift</button>
                            </div>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>workShift</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>workShift</th>
                                                            <th>Start Time</th>
                                                            <th>End Time</th>
                                                            <th>Late Count</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% workShift.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.workShift %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.StartTime %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.EndTime %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.LateCount %>
                                                                    </td>
                                                                    <td>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-name="<%=item.workShift%>"
                                                                                    data-st="<%=item.StartTime%>"
                                                                                    data-en="<%=item.EndTime%>"
                                                                                    data-lc="<%=item.LateCount%>"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editworkShift"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/workShifts/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <!-- model of add workShift -->
    <div class="modal fade model-of-addworkShift" id="addworkshift" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">workShift</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newworkShift" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">workShift</label>
                            <input name="workShift" class="form-control" id="exampleInputEmail1" type="text"
                                aria-describedby="emailHelp"  >
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" >Start Time</label>
                            <div class="input-group">
                                <input name="StartTime" class="form-control" type="text" placeholder="09:00"><span
                                    class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0">End Time</label>
                            <div class="input-group">
                                <input name="EndTime" class="form-control" type="text" placeholder="18:00"><span
                                    class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0">Late Count Time</label>
                            <div class="input-group">
                                <input name="LateCount" class="form-control" type="text" placeholder="09:15"><span
                                    class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                            </div>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- model of edit workShift -->
    <div class="modal fade model-of-editworkShift" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">workShift</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="col-form-label pt-0" for="exampleInputEmail1">workShift</label>
                            <input name="workShift" class="form-control" id="workShift" type="text"
                                aria-describedby="emailHelp"  >
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0" >Start Time</label>
                            <div class="input-group">
                                <input name="StartTime" class="form-control" type="text" id="sttm" placeholder="09:00"><span
                                    class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0">End Time</label>
                            <div class="input-group">
                                <input name="EndTime" class="form-control" type="text" id="entm" placeholder="18:00"><span
                                    class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label pt-0">Late Count Time</label>
                            <div class="input-group">
                                <input name="LateCount" class="form-control" type="text" id="ltc" placeholder="09:15"><span
                                    class="input-group-addon"></span>
                            </div>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>