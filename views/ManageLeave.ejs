<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/metalinks') %>
</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <%- include ('./partials/header') %>
            <div class="page-body-wrapper">

                <%- include ('./partials/sidebar') %>
                    <!-- Container-fluid starts-->
                    <div class="page-body">
                        <div class="container-fluid">
                            <!-- Small modal-->
                            <div class="text-end">
                                <button class="btn btn-primary mb-2" type="button" data-bs-toggle="modal"
                                    data-bs-target=".model-of-addApplyLeave">Add ApplyLeave</button>
                            </div>

                            <div class="row">
                                <!-- Zero Configuration  Starts-->
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header pb-0">
                                            <h4>ManageLeave</h4>
                                        </div>

                                        <div class="card-body">
                                            <div class="table-responsive theme-scrollbar">
                                                <table class="display" id="basic-1">
                                                    <thead>
                                                        <tr>
                                                            <th>S/l</th>
                                                            <th>Username</th>
                                                            <th>Employee Id</th>
                                                            <th>Reason</th>
                                                            <th>From Date</th>
                                                            <th>To Date</th>
                                                            <th>Status</th>
                                                            <th>Options</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <% var i=1 %>
                                                            <% ManageLeave.forEach((item)=>{ %>

                                                                <tr class="align-middle">
                                                                    <th scope="row">
                                                                        <%=i++%>
                                                                    </th>
                                                                    <td>
                                                                        <%=item.username %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.empId %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.Reason %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.FromDate %>
                                                                    </td>
                                                                    <td>
                                                                        <%=item.ToDate %>
                                                                    </td>
                                                                    <td>
                                                                        <%if(item.Status=="Active"){%>
                                                                            <span
                                                                                class="badge badge-success">Active</span>
                                                                            <%}else if(item.Status=="Inactive" ){%>
                                                                                <span
                                                                                    class="badge badge-danger">Inactive</span>
                                                                                <%}else{%>
                                                                                    <span
                                                                                        class="badge badge-secondary">Pending</span>
                                                                                    <%}%>
                                                                    </td>
                                                                    <td>
                                                                        <ul class="action">
                                                                            <li class="edit"> <a id="editData"
                                                                                    data-id="<%=item.id%>"
                                                                                    data-name="<%=item.username%>"
                                                                                    data-empId="<%=item.empId%>"
                                                                                    data-Reason="<%=item.Reason%>"
                                                                                    data-FromDate="<%=item.FromDate%>"
                                                                                    data-ToDate="<%=item.ToDate%>"
                                                                                    data-Status="<%=item.Status%>"
                                                                                    data-bs-toggle="modal"
                                                                                    data-bs-target=".model-of-editManageLeave"><i
                                                                                        class="icon-pencil-alt"></i></a>
                                                                            </li>
                                                                            <li class="delete"><a
                                                                                    href="/ManageLeaves/delete/<%=item.id%>"><i
                                                                                        class="icon-trash"></i></a>
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>
    <!-- model of add ApplyLeave -->
    <div class="modal fade model-of-addApplyLeave" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">ApplyLeave</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/newApplyLeave" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="form-label f-w-500">Employee Name</label>
                            <select name="username" class="form-control btn-square">
                                <option selected disabled>--Please Select--</option>
                                <% User.forEach( (item)=>{ %>
                                    <option value="<%=item.username %>">
                                        <%=item.username %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label f-w-500">Employee Name</label>
                            <select name="empId" class="form-control btn-square">
                                <option selected disabled>--Please Select--</option>
                                <% User.forEach( (item)=>{ %>
                                    <option value="<%=item.empId %>">
                                        <%=item.empId %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label f-w-500">Reason</label>
                            <input required name="Reason" class="form-control" type="text" placeholder="John">
                        </div>

                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">From Date</label>
                                <div class="input-group">
                                    <input required name="FromDate" class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">To Date</label>
                                <div class="input-group">
                                    <input required name="ToDate"  class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label f-w-500">Status</label>
                            <select name="Status" class="form-control btn-square">
                                <option selected disabled>--Please Select--</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Pending">Pending</option>

                            </select>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Done</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- model of edit ManageLeave -->
    <div class="modal fade model-of-editManageLeave" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="mySmallModalLabel">ManageLeave</h4>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formaction" method="post" class="theme-form">
                        <div class="mb-3">
                            <label class="form-label f-w-500">Reason</label>
                            <input required id="mnglv" name="Reason" class="form-control" type="text" placeholder="John">
                        </div>

                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">From Date</label>
                                <div class="input-group">
                                    <input required name="FromDate" id="FromDate" class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="date-picker">
                                <label class="form-label f-w-500">To Date</label>
                                <div class="input-group">
                                    <input required name="ToDate" id="ToDate" class="datepicker-here form-control digits"
                                        type="text" data-language="en">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label f-w-500">Status</label>
                            <select name="Status" class="form-control btn-square" id="Status">
                                <option selected disabled>--Please Select--</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Pending">Pending</option>

                            </select>
                        </div>
                        <button class="btn btn-pill btn-primary btn-air-light" type="submit" data-bs-original-title=""
                            title="">Done</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./partials/script') %>
</body>

</html>